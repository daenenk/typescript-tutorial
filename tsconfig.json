{
  "compilerOptions": {

    "target": "es2024",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "removeComments": false,
    "noLib": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": [
    "dist",
    "node_modules",
    "streamops"
  ]
}
